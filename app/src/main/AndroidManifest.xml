<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omega.mouthpiece">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoadingPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".webactivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Login Page-->
        <activity android:name=".MainActivity"/>
        <!--Register Page-->
        <activity android:name=".RegisterPage"/>
        <!--MouthSelection-->
        <activity android:name=".MouthSelection" android:exported="true"/>
        <activity android:name=".DetailActivity"/>
        <!--MouthCreation-->
        <activity android:name=".UploadMouthsFrontPage" android:exported="true"/>
        <activity android:name=".mouthCreation" android:exported="true"/>
        <activity android:name=".mouthCreation_ImageUpload" android:exported="true"/>
        <activity android:name=".imageConfirmation" android:exported="true"/>
        <!--Landing Page-->
        <activity android:name=".Landing"/>
        <!--Converter-->
        <activity android:name=".Converter" android:exported="true"/>
        <!--Training-->
        <activity android:name=".TrainingPage" android:exported="true"/>
        <!--Webview-->
        <activity android:name=".WebView" android:exported="true"/>
        <!--Filter-->
        <activity android:name=".filter" android:exported="true"/>
    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>