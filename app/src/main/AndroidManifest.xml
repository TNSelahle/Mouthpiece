        <activity android:name=".imageConfirmation" android:exported="true"/>
        <!--Landing Page-->
        <activity android:name=".Landing"/>
        <!--Converter-->
        <activity android:name=".Converter" android:exported="true"/>
        <!--Training-->
        <activity android:name=".TrainingPage" android:exported="true"/>
        <!--Webview-->
        <!--Filter-->
        <activity android:name=".filter" android:exported="true"/>
        <!--Feedback page-->
        <activity android:name=".FeedbackPage" android:exported="true"/>
        <!--Setting page-->
        <activity android:name=".settingpage" android:exported="true"/>
